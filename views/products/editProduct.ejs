<% layout('layout/boilerplate') -%>
    <h1>Update Product</h1><br>
    <form action="/updateProduct/<%=prod._id%>?_method=patch" method="post">
        <label for="productName">Product Name :</label>
        <input type="text" name="productName" value="<%=prod.productName%>" placeholder="Enter product name" ><br>
        <label for="productPrice">Product Price :</label>
        <input type="text" name="productPrice" value="<%=prod.productPrice%>" ><br>
        <label for="productDescription">Product Desciption :</label>
        <input type="text" name="productDescription" value="<%=prod.productDescription%>" ><br>
        <label for="productImageUrl">Product ImageUrl :</label>
        <input type="text" name="productImageUrl" value="<%=prod.productImageUrl%>"><br>
        <label for="productCategory">Product Category :</label>
        <input type="text" name="productCategory" value="<%=prod.productCategory%>" ><br>
      
        <input class="btn btn-primary" type="submit" ><br>
    </form>
