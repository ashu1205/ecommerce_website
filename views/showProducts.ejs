    <h1>Products</h1>
    
    <% if(user) {%>
        <% if(user.isAdmin){ %>
            <div class="add-prod">
                <a href="/createProduct"><button>Add Product</button></a>
            </div>
        <%}%>
        <%}%>
    <div class="product-list">
        
        <%for(let prod of data){%>
            <div class="card m-2" style="width: 18rem;">
                <img src=<%=prod.productImageUrl%> alt="product_image" class="card-img-top" >
                <div class="card-body">
                  <h5 class="card-title"><i><%=prod.productName%></i></h5>
                  <h4>â‚¹<%=prod.productPrice%></h4>
                  <p class="card-text"> <b>Description :</b> <%=prod.productDescription%></p>
                  <a href="http://" class="btn btn-primary">Add to Cart</a>
                  <a href="/buynow" class="btn btn-warning">Buy now</a>

                <% if(user) {%>
                    <% if(user.isAdmin) {%>
                        <a href="/updateProduct/<%=prod._id%>"  class="btn btn-success">Edit</a>
                  
                        <form action="/deleteProduct/<%=prod._id%>?_method=delete"  method="post">
                          <button class="btn btn-danger" >Delete</button>
                      </form>
                    <%}%>
                <%}%>
                 
                </div>
              </div>
            
        <% }%>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
